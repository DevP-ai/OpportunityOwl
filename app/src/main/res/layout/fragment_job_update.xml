<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.JobUpdateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/jobPostTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Job Title"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16ssp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/jobPostCompanyName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Company Name"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16ssp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/jobPostLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Job Location"
                                    android:inputType="text"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16ssp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_3sdp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/jobPostSalary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="Salary"
                                    android:inputType="text|number"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16ssp" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <LinearLayout
                                android:background="@drawable/edt_bg"
                                android:id="@+id/userTypeLayout"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Job Type:"
                                    android:textSize="@dimen/_15ssp"
                                    android:layout_marginStart="6dp"
                                    android:layout_gravity="center_vertical"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold"/>

                                <RadioGroup
                                    android:orientation="horizontal"
                                    android:id="@+id/userRadioGroup"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <com.google.android.material.radiobutton.MaterialRadioButton
                                        android:id="@+id/radioBtnAdmin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Full Time"
                                        android:textStyle="bold"
                                        android:layout_marginStart="@dimen/_20ssp"
                                        android:textColor="@color/blue"
                                        android:checked="false"
                                        app:useMaterialThemeColors="false"
                                        android:layout_weight="0.20"/>

                                    <com.google.android.material.radiobutton.MaterialRadioButton
                                        android:id="@+id/radioBtnSubAdmin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Internship"
                                        android:textStyle="bold"
                                        android:textColor="@color/blue"
                                        android:checked="false"
                                        app:useMaterialThemeColors="false"
                                        android:layout_weight="0.20"/>

                                </RadioGroup>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_3sdp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/jobDescription"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_150sdp"
                            android:hint="Description"
                            android:gravity="start"
                            android:inputType="text"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_16ssp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/jobImagePost"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:src="@drawable/imgview" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/jobImgFab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/gray"
                        android:scaleType="center"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:src="@drawable/ic_image"
                        app:maxImageSize="@dimen/_30sdp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/lineProgressBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:indicatorColor="@color/red"
                        android:visibility="gone"/>

                    <Button
                        android:id="@+id/postJobButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="Post" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>